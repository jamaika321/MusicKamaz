<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:layout_width="@dimen/alert_dialog_width"
    android:layout_height="@dimen/alert_dialog_height">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_question_bt_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:gravity="center"
        android:drawablePadding="12dp"
        style="@style/AlertDialogBlurText"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.AppCompatTextView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#707070"
        android:layout_marginHorizontal="@dimen/line_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_bt_connection"
        app:layout_constraintBottom_toTopOf="@+id/btn_close"
        >
    </View>


    <TextView
        android:layout_width="0dp"
        android:id="@+id/btn_close"
        style="@style/button_playlist_option"
        app:layout_constraintBottom_toTopOf="@id/btn_add_to_playlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="0dp"
        android:id="@+id/btn_add_to_playlist"
        style="@style/button_playlist_option"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
