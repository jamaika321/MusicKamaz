<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.SearchView"
        android:outlineAmbientShadowColor="@color/white"
        android:layout_height="0dp"
        android:layoutDirection="rtl"
        android:background="@drawable/ic_back_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1.5"
        android:queryHint="Поиск..."
        android:textColorHint="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:textSize="@dimen/marginTop"
        app:goIcon="@drawable/ic_music_white"
        app:layout_constraintBottom_toTopOf="@+id/rv_all_music"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_list_frag"
        android:layout_marginEnd="@dimen/margin_list_frag"
        >
    </androidx.appcompat.widget.SearchView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_all_music"
            app:layout_constraintTop_toBottomOf="@id/search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintVertical_weight="9"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="0dp">
        </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/audioIsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Не удалось обнаружить аудифайлы на данном устройстве"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

