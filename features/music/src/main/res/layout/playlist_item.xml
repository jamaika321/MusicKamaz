<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_all_item"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/image_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_back_for_main_category"
        android:padding="@dimen/margin_list_frag2"
        app:layout_constraintBottom_toTopOf="@id/text_category"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:background="@drawable/add_playlist_back_item"
        android:id="@+id/foreground_image"
        android:layout_height="0dp"
        android:text="@string/add_widget"
        android:layout_width="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/text_category"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="2dp"
        android:text="@string/create"
        style="@style/PlayListItemText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="file name" />

</androidx.constraintlayout.widget.ConstraintLayout>