<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="160dp"
    android:layout_width="160dp"
    app:cardBackgroundColor="@color/test2"
    app:layout_constraintCircleRadius="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:background="@drawable/dialog_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_category"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:src="@drawable/korj"
            android:background="@color/test2"
            app:layout_constraintBottom_toTopOf="@+id/text_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:background="@drawable/add_playlist_back_item"
            android:id="@+id/foreground_image"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/text_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="4" />

        <TextView
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:id="@+id/text_category"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Title"
            android:background="@color/test2"
            android:textColor="@color/light_blue_50"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_category" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>