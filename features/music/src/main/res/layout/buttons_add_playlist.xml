<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/view_change_source"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/marginTop"
    android:layout_marginBottom="@dimen/marginTop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cancel_btn"
        style="@style/button_add_playlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/cancel_add"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/marginTop"
        android:layout_marginEnd="@dimen/marginTop"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/add_btn"
        style="@style/button_add_playlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/marginTop"
        android:layout_marginEnd="@dimen/marginTop"
        android:text="@string/add_playlist"
        android:gravity="center"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>